@using WEBSHOP.Models;
@model List<CartItem>
@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<div class="container">
    <div class="check">
        <h1 style="color:black;">My Shopping Bag (@ViewBag.TongSoLuong)</h1>
        <div class="col-md-9 cart-items">
            @foreach (var item in Model)
            {
               

                <script>
                    $(document).ready(function (c) {
                        $('.close1').on('click', function (c) {
                            $('.cart-header').fadeOut('slow', function (c) {
                                $('.cart-header').remove();
                            });
                        });
                    });
                </script>

                <div class="cart-header">
                    <div class="close2">   
                        <button class="btn-success"><a>@Html.ActionLink("Sửa", "SuaGioHang", new { @MaSP = item.ProductID })</a></button>
                        <button class="btn-danger">  <a>@Html.ActionLink("Xóa", "XoaGioHang", new { @MaSP = item.ProductID })</a></button>
                       
</div>
                
                     
                    <div class="cart-sec simpleCart_shelfItem">

                        <div class="cart-item cyc">
                            <img src="~/Assets/Client/ImageProduct/TM33C01PBLK_Zoom_M_1.jpg" />
                        </div>
                        <div class="cart-item-info">
                            <h2 style="color:black;float:left;">@item.ProductName</h2><br /><br />
                            <span style="color:black;float:left;">Model No: @item.ProductID</span><br /><br />
                            <span style="color:black;float:left;">Size: 5</span><br /><br />
                            
                            <span style="color:black;float:left;">Qty:@Html.TextBox("SoLuong", item.SoLuong)</span>
                          
                        </div>
                    </div>
                   
                    <div class="clearfix"></div>
                </div>
       
            }
        </div>
            <div class="col-md-3 cart-total">
                <a class="continue" href="#">Continue to basket</a>
                <div class="price-details">
                    <h3>Price Details</h3>
                    <span>Total</span>
                    <span class="total1">@ViewBag.TongTien</span>
                    <span>Discount</span>
                    <span class="total1">---</span>
                    <span>Delivery Charges</span>
                    <span class="total1">0%</span>
                    <div class="clearfix"></div>
                </div>
                <ul class="total_price">
                    <li class="last_price"> <h4>TOTAL</h4></li>
                    <li class="last_price"><span> @ViewBag.TongTien</span></li>
                    <div class="clearfix"> </div>
                </ul>


                <div class="clearfix"></div>
                <a class="order" href="#">Place Order</a>

            </div>

            <div class="clearfix"> </div>
        </div>

</div>



