@using Model.EF
@model PRODUCT

@{
    var imageproduct = (IMAGEPRODUCT)ViewBag.ImageProduct;
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<script>
    // You can also use "$(window).load(function() {"
    $(function () {
      // Slideshow 1
      $("#slider2").responsiveSlides({
         auto: true,
		 nav: true,
		 speed: 500,
		 namespace: "callbacks",
      });
    });
</script>
<script src="~/Assets/Client/js/responsiveslides.min.js"></script>
<div class="single-section">
    <div class="col-md-8 fashions2">
        <div class="slider2">
            <ul class="rslides rslider" id="slider2">           
                <li><img src="@Url.Content("~/Assets/Client/ImageProduct/"+Model.Images)" alt=""></li>
                <li><img src="@Url.Content("~/Assets/Client/ImageProduct/"+imageproduct.Image1)" alt=""></li>
                <li><img src="@Url.Content("~/Assets/Client/ImageProduct/"+imageproduct.Image2)" alt=""></li>
                <li><img src="@Url.Content("~/Assets/Client/ImageProduct/"+imageproduct.Image3)" alt=""></li>           
            </ul>
        </div>
    </div>
    <div class="col-md-4 side-bar2">
        <div class="product-price">
            <div class="product-name">
                <h2>@Model.ProductName</h2>
                <p>@Html.Raw(Model.Descripstion)</p>
                <span>@Model.Price VNĐ</span>
                <div class="clearfix"></div>
                <h4>AVAILABLE</h4>
            </div>
            <div class="product-id">
                <h4>SELECT YOUR SIZE</h4>
                <div class="size select-size">
                    <ul>
                        <li><a href="#">XS</a></li>
                        <li><a href="#">S</a></li>
                        <li><a href="#">M</a></li>
                        <li><a href="#">L</a></li>
                        <li><a href="#">XL</a></li>
                    </ul>
                </div>
                <p>PRODUCT ID : <a href="#">D35TSJ69NU</a></p>
                <a class="add" href="@Url.Action("ThemGioHang","Cart",new { @MaSP=Model.ProductID,@strURL=Request.Url.ToString()})">ADD TO BAG</a>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>
</div>

