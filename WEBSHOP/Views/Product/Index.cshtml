@using Model.EF
@model IEnumerable<PRODUCT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
<div class="men-fashions">
    <div class="container">
        <div class="col-md-9 fashions">
            <div class="title">
                <h3>HOT TREND</h3>
            </div>
            <div class="fashion-section">
                <div class="fashion-grid1">
                    @foreach (var item in Model)
                    {
                       var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ProductID;
                    <div class="col-md-4 fashion-grid">
                        <a href="@link">
                            <img src="@Url.Content("~/Assets/Client/ImageProduct/"+item.Images)" alt="" />
                            <div class="product">
                                <h3>@item.ProductName</h3>
                                <p><span></span> @item.Price VNĐ</p>
                            </div>
                        </a>
                        <div class="fashion-view">
                            <span></span>
                            <div class="clearfix"></div>
                            <h4><a href="@link">Xem chi tiết</a></h4>
                            
                            @*<h4 class="sold-out"><a href="single.html"><del>Thêm Giỏ</del></a></h4>*@
                        </div>
                    </div>
                    }
                    <div class="clearfix"></div>
                </div>
              
            </div>
        </div>
        <div class="col-md-3 side-bar">
            <div class="categories">
                <h3>Loại Sản Phẩm</h3>
                @{Html.RenderAction("ProductType", "Product"); }
            </div>
            <div class="sales">
                <h3>SALE</h3>
                <div class="pricing">
                    <h4>Price range</h4>
                    <input type="text" placeholder="price from" required />
                    <input type="text" placeholder="price to" required />
                    <div class="clearfix"></div>
                </div>
                <div class="size">
                    <h4>Size</h4>
                    <ul>
                        <li><a href="#">XS</a></li>
                        <li><a href="#">S</a></li>
                        <li><a href="#">M</a></li>
                        <li><a href="#">L</a></li>
                        <li><a href="#">XL</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

