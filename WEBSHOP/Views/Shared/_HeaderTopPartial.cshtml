<style>
    #btnDangNhap {
        float: left;
    }

    #close-form {
        color: white;
    }

    #login-form {
        background: #3a3a46;
        cursor: pointer;
    }

    #popup_login {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,.5);
        z-index: 99;
        display: none;
    }
</style>
<script type="text/javascript">
    $("#btnDangNhap").click(function () {
        $("#popup_login").show();
    });

    $("#close-form").click(function () {
        $("#popup_login").click(Anform);
    });
    function Anform() {
        $("#popup_login").hide();
    }

  
</script>
